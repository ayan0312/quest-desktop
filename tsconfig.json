{
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "dist",
        "target": "ESNext",
        "module": "CommonJS",
        "jsx": "react",
        "lib": ["ESNext", "DOM"],
        "types": ["node"],
        "paths": {
            "src/*": ["src/*"]
        },
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "include": ["src","scripts"]
}
